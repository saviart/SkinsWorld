<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="140dp"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:background="#050714">
    <LinearLayout
        android:weightSum="7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_header_transhistory">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_userwhite"/>
                <TextView
                    android:id="@+id/trans_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User name"
                    android:textColor="#ffff"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="8sp"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/trans_skinsimage"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/sample_csgo"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/trans_skinsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item transaction"
                android:textColor="#ffff"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="8sp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" >
            <Button

                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="30min ago"
                android:textColor="#000000"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="8sp"
                android:id="@+id/trans_time"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>