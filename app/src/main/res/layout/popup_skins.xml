<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@drawable/bg_headerpopup"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingTop="5dp"
                            android:text="ITEM DETAIL"
                            android:textColor="#ffff"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">

                        <ImageView
                            android:id="@+id/btn_close_popup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/ic_closepopup" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView

                                    android:id="@+id/popup_imgitem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/sample_csgo" />

                                <TextView
                                    android:id="@+id/popup_nameitem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="NameofItems"
                                    android:textColor="#070707"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/popup_desitem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="DesofItems"
                                    android:textColor="#070707"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/detail_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="Specific details of this item..........................................................................................................."
                                    android:textColor="#000000"
                                    android:textSize="10sp" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="15dp">

                        <Button
                            android:id="@+id/popup_numbpoint"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                          android:layout_margin="2dp"
                            android:background="@drawable/bg_buttonpoint"
                            android:drawableLeft="@drawable/img_point"
                            android:fontFamily="@font/poppinsmedium"
                            android:padding="5dp"
                            android:text=""
                            android:textSize="12sp"

                            />

                        <Button
                            android:id="@+id/popup_txtgame"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:background="@drawable/bg_game"
                            android:fontFamily="@font/poppinsmedium"
                            android:padding="5dp"
                            android:text=""
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/line_popup" />

                        <Button
                            android:id="@+id/popup_btnconfirm"
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="60dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="60dp"
                            android:background="@drawable/bg_btngetmore"
                            android:fontFamily="@font/poppinsmedium"
                            android:padding="5dp"
                            android:text="CONFIRM"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

    </LinearLayout>


</LinearLayout>
