<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_header_listskins"
        android:gravity="right">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <LinearLayout

                 android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:gravity="center"
                   android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="ITEM DETAIL"
                    android:textColor="#ffff"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">

                <ImageView
                    android:id="@+id/btn_close_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/ic_closepopup" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#0a0e28"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <ImageView

            android:id="@+id/popup_imgitem"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/sample_csgo" />
    </LinearLayout>

    <LinearLayout
        android:background="#0a0e28"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5"
                android:background="#14182e"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/popup_nameitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="NameofItems"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/popup_desitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="DesofItems"
                    android:textColor="#FF898888"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/popup_numbpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_buttonpoint"
                    android:drawableLeft="@drawable/img_coin"
                    android:fontFamily="@font/poppinsmedium"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#ffff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/popup_txtgame"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_game"
                    android:fontFamily="@font/poppinsmedium"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#ffff"
                    android:textSize="12sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="This item will be send to your account after 24 hours "
                    android:textColor="#FF898888"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/popup_btnconfirm"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_popup_btn_action"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="CONFIRM"
                    android:textColor="#ffff"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
