<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:orientation="horizontal"
    android:background="@drawable/bg_items"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_trans_items"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sample_csgo"/>

    </LinearLayout>

    <LinearLayout

        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_trans_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:text="NameofItems"
                android:textColor="#FF898888"
                android:textSize="12sp" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/des_trans_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DesofItems"
                android:textSize="10sp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#FF898888"/>

            <Button
                android:id="@+id/numb_trans_point"
                android:layout_width="70dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/bg_buttonpoint"
                android:drawableLeft="@drawable/img_coinsmall"
                android:fontFamily="@font/poppinsmedium"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:text="1234"
                android:textSize="10sp"
                android:textColor="#ffff"


                />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/trans_status"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:background="@drawable/bg_buttongame"
            android:fontFamily="@font/poppinsmedium"
            android:text=""
            android:textColor="#ffff"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>
